{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "ES2016",
    "module": "CommonJS",
    "allowJs": true,
    "lib": [
      "ES2019"
    ],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": ["./*"]
    },
    "sourceMap": true
  }
}